<h1><%= @task.title %></h1>

<div id='taks-navigation'>
  <%= link_to @task.subject.name, subject_path(@task.subject) %>
  | <%= link_to 'Edit', edit_task_path(@task) %>
  | <%= link_to 'Delete', task_path(@task), method: :delete %>
</div>

<div id='task-content '>
  <p>
    <%= @task.content %>
  </p>
</div>

<div id='task_items' class="ui">
  <%= render @task.task_items %>
</div>

<%= form_with(model: [@task, @task.task_items.build]) do |f| %>
  <%= f.label :new_sub_task %>:
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>

<div id='task_comments'>
  <%= render @task.task_comments %>
</div>
